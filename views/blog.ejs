<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title><%= blog.title %> | Blog</title>
    <style>
      .blog-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }
      .blog-header {
        margin-bottom: 30px;
      }
      .blog-cover {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: 8px;
        margin: 20px 0;
      }
      .blog-content {
        white-space: pre-wrap;
        font-family: inherit;
        line-height: 1.6;
        font-size: 1.1rem;
        font-family: "Courier New", Courier, monospace;
        font-weight: 700;
      }
      .author-info {
        display: flex;
        align-items: center;
        gap: 15px;
        margin: 30px 0;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
      }
      .author-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
      }
      .comments-section {
        margin-top: 40px;
        border-top: 1px solid #eee;
        padding-top: 30px;
      }
      .comment-form {
        margin-bottom: 30px;
      }
      .comment {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
      }
      .comment-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
      }
      .comment-content {
        flex-grow: 1;
      }
      .comment-text {
        white-space: pre-wrap;
        margin-top: 8px;
      }
      .comment-meta {
        font-size: 0.9rem;
        color: #6c757d;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="blog-container">
      <!-- Blog Header -->
      <div class="blog-header">
        <h1 class="display-4"><%= blog.title %></h1>
      </div>

      <!-- Blog Cover Image -->
      <% if (blog.coverimgurl) { %>
      <img
        src="<%= blog.coverimgurl %>"
        class="blog-cover"
        alt="Blog cover image"
      />
      <% } %>

      <!-- Blog Content -->
      <div class="blog-content"><%= blog.body %></div>

      <!-- Author Info -->
      <div class="author-info">
        <img
          src="<%= blog.createdBy.profileimgurl || '/images/default-avatar.jpg' %>"
          class="author-avatar"
          alt="Author avatar"
        />
        <div>
          <h5 class="mb-1"><%= blog.createdBy.fullName %></h5>
          <small class="text-muted">Author</small>
        </div>
      </div>

      <!-- Comments Section -->
      <div class="comments-section">
        <h3>Comments (<%= comments.length %>)</h3>

        <!-- Comment Form -->
        <% if (locals.user) { %>
        <form
          action="/blog/comment/<%= blog._id %>"
          method="post"
          class="comment-form"
        >
          <div class="input-group">
            <input
              type="text"
              name="content"
              class="form-control"
              placeholder="Share your thoughts..."
              required
            />
            <button class="btn btn-primary" type="submit">Post</button>
          </div>
        </form>
        <% } else { %>
        <div class="alert alert-info">
          Please <a href="/user/login">login</a> to leave a comment.
        </div>
        <% } %>

        <!-- Comments List -->
        <div class="comments-list">
          <% if (comments.length === 0) { %>
          <div class="alert alert-light">
            No comments yet. Be the first to comment!
          </div>
          <% } else { %> <% comments.forEach(comment => { %>
          <div class="comment">
            <img
              src="<%= comment.createdBy.profileimgurl || '/images/default-avatar.jpg' %>"
              class="comment-avatar"
              alt="Commenter avatar"
            />
            <div class="comment-content">
              <div class="comment-meta">
                <strong><%= comment.createdBy.fullName %></strong>
                <span class="text-muted"
                  >â€¢ <%= comment.createdAt.toLocaleString() %></span
                >
              </div>
              <div class="comment-text"><%= comment.content %></div>
            </div>
          </div>
          <% }) %> <% } %>
        </div>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
